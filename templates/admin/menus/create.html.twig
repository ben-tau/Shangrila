{% extends 'admin/base.html.twig' %}

{% block title %}Créer un menu{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">Créer un nouveau menu</h1>
    {% for message in app.flashes('success') %}
        <div class="flash-notice text-center alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('warning') %}
        <div class="flash-notice text-center alert alert-warning">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container py-5 my-5 isForm">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success mx-2">Créer le menu</button>
            <a href="{{path('homepage')}}" class="btn btn-secondary mx-2">Retour</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
